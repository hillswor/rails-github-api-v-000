<div class = "container">
  <h1>Repos</h1>
  <h3>by: <%= @body_hash[0]['owner']['login'] %></h3>
  <br />

  <% @body_hash.each do |repo| %>
    <%= repo['name'] %><br />
  <% end %>
  <br />
  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
